block content
  div.enterpriseDetail
    div.row
      div.col-lg-2.col-md-2.col-sm-2.col-xs-2
      div.contail.col-lg-8.col-md-8.col-sm-8.col-xs-8
        div.head
          img(src='/images/enterpriseDetailsHead.png')
        div.content
          //-
            div.infoImg
              img(src='/images/ylyInfo.png')
          div.txt
            div.txtTop
              div.imgs
              div.description
                h5
                div.headers
                  p.des
                    span
                      i Slogan: 
                      b
                  p.web
                    span
                      a(target="_blank")
                  - if (lang === 'cn')
                    div.left
                      p.Setdate
                        span 成立时间：
                        i 
                    div.right
                      p.companySize
                        span 公司规模：
                        i 
                    div.desInfo
                      span 公司CEO：
                      i 
                  - else if (lang === 'en')
                    div.left
                      p.Setdate
                        span founding time：
                        i 
                    div.right(style="margin-left: 18px")
                      p.companySize
                        span company size：
                        i 
                    div.desInfo
                      span CEO：
                      i
            div.txtContent
              h4 
              div.info 
      div.col-lg-2.col-md-2.col-sm-2.col-xs-2
    input(type='hidden', value='#{id}').id
  script(src='/javascripts/enterpriseDetail.js')
